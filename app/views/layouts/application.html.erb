<!DOCTYPE html>
<html>
<head>
  <title>Vets</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->


        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to "About Us", "/home/main"%></li>
            <li><%= link_to "Privacy Statement", "/home/privacy"%></li>
            <li><%= link_to "Team", "/home/team"%></li>
            <li><%= link_to "Contacts", "/home/contact"%></li>
          </ul>
          <form class="navbar-form navbar-right">
            <% if user_signed_in? %>
                <%= current_user.email %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'btn btn-default'  %>
            <% else %>
                <ul class="nav navbar-nav">
                <li><%= link_to "Join our panel", new_user_registration_path%></li>
                <li><%= link_to "Log in", new_user_session_path%></li>
                </ul>
            <% end %>
          </form>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  <% if user_signed_in? %>
      <nav class="navbar navbar-inverse" role="navigation">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to "Address Details", user_profile_path(current_user)%></li>
              <li class="active"><%= link_to "Professional Details", user_profession_path(current_user)%></li>
              <li class="active"><%= link_to "Workplace", user_workplace_path(current_user)%></li>
              <li class="active"><%= link_to "Animal experience", user_animal_path(current_user)%></li>
              <li class="active"><%= link_to "Desease Experience", user_desease_path(current_user)%></li>
            </ul>
      </nav>
  <% end %>


    <%= yield %>

</div>

</body>
</html>
